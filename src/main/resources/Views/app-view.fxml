<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Project.Controllers.appController"
      stylesheets="@style.css"
      prefWidth="600" prefHeight="400">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="Çağrı Merkezi İşlem Kuyruğu ve Operatör Atama Sistemi'ne Hoşgeldiniz">
        <font>
            <Font size="18"/>
        </font>
    </Label>

    <Button fx:id="startButton" text="Simülasyonu Başlat" prefWidth="200" onAction="#onStartButtonClick" />

</VBox>
